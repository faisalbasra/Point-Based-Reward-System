<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/views/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/views/login.jsp</jsp-file>
    </servlet>
    <servlet><servlet-name>redeem</servlet-name><jsp-file>/views/redeem.jsp</jsp-file></servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RedeemServlet</servlet-name>
        <servlet-class>controllers.RedeemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>controllers.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redeem</servlet-name>
        <url-pattern>/redeem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RedeemServlet</servlet-name>
        <url-pattern>/RedeemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/ReportServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <ejb-ref>
        <ejb-ref-name>CustomerManagerBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>managers.CustomerManagerRemote</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>MerchantManagerBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>managers.MerchantManagerRemote</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>RewardManagerBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>managers.RewardManagerRemote</remote>
    </ejb-ref>
    </web-app>
